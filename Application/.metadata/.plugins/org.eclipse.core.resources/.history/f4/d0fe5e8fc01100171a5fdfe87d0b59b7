package controllers;

import javax.inject.Inject;

import dao.IUserDAO;
import daoImpl.UserDAO;
import models.User;
import play.data.Form;
import play.data.FormFactory;
import play.mvc.Controller;
import play.mvc.Result;

public class PropositionController extends Controller {
	
	private FormFactory formFactory;
	private IPropositionDAO userDAO;

	@Inject
	public PropositionController(FormFactory formFactory) {

		this.formFactory = formFactory;
	}

	public Result addPropositionAction() {

		Form<User> user = formFactory.form(User.class);

		return ok(index.render(user));
	}

	public Result getAllPropositionAction() {

		User user = formFactory.form(User.class).bindFromRequest().get();

		return ok(dashboard.render(user));
	}

	public Result detailPropositionAction() {

		User newUser = formFactory.form(User.class).bindFromRequest().get();

		return ok(dashboard.render(newUser));
	}
	
	public Result editPropositionAction() {

		User newUser = formFactory.form(User.class).bindFromRequest().get();

		return ok(dashboard.render(newUser));
	}
	
	public Result deletePropositionAction() {

		User newUser = formFactory.form(User.class).bindFromRequest().get();

		return ok(dashboard.render(newUser));
	}

}
