package models;

import java.util.Date;
import java.util.List;

import javax.persistence.*;

@Entity
public class Proposal {
	@Id
    @GeneratedValue(strategy=GenerationType.AUTO)
	private Long idProposal;
	private String ProposalName;
	@Enumerated(EnumType.STRING)
	private PropositionState propositionState;
	private Date creationDate;
	@ManyToOne(fetch=FetchType.LAZY)
	@JoinColumn(name="user_fk")
	private User authorOfProposal;
	@OneToMany(mappedBy = "Proposition_id")
	private List<Proposition_Writer> Propositions;
	
	
	public void setProposalState(PropositionState propositionState) {
		this.propositionState = propositionState;
	}
	
	
}
