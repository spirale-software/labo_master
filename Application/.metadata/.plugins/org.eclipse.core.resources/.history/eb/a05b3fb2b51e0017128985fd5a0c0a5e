# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Routes related to index and registration routes
#--------------------------------------------------------------------------------------------------
GET     /                 						controllers.HomeController.indexAction

GET     /logout           						controllers.HomeController.logOutAction

GET     /dashboard         						controllers.HomeController.showDashboardAction

POST	/connection/newUser						controllers.HomeController.connectNewUserAction

POST	/connection/registeredUser				controllers.HomeController.connectRegisteredUserAction

# Routes related to propositions
# -------------------------------------------------------------------------------------------------
GET     /proposition          						controllers.ProposalController.proposalAction

POST    /proposition/ajouter           				controllers.ProposalController.addProposalAction

GET     /proposition/modifier/:idProposal			controllers.ProposalController.editProposalAction(idProposal: Long)

GET     /proposition/supprimer         				controllers.ProposalController.deleteProposalAction

GET     /proposition/lister        					controllers.ProposalController.getAllProposalsAction

GET     /proposition/detail/:idProposal				controllers.ProposalController.detailProposalAction(idProposal: Long)

GET     /proposition/contenu/:idProposal			controllers.ProposalController.writeProposalContentAction(idProposal: Long)

POST    /proposition/contenu/ajouter/:idProposal	controllers.ProposalController.addProposalContentAction(idProposal: Long)





# Map static resources from the /public folder to the /assets URL path
# ---------------------------------------------------------------------------------------------------------------------------
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


