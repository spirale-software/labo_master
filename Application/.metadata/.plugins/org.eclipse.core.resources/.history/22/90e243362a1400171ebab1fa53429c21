# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Routes related to index and registration routes
#--------------------------------------------------------------------------------------------------
GET     /                 			controllers.HomeController.indexAction

GET     /logout           			controllers.HomeController.logOutAction

POST	/connection/newUser			controllers.HomeController.connectNewUserAction

POST	/connection/registeredUser	controllers.HomeController.connectRegisteredUserAction

# Routes related to propositions
# -------------------------------------------------------------------------------------------------
GET     /proposition/form          	controllers.PropositionController.proposalAction

POST    /proposition/add            controllers.PropositionController.addProposalAction

GET     /proposition/detail         controllers.PropositionController.detailProposalAction

GET     /proposition/edit           controllers.PropositionController.editProposalAction

GET     /proposition/delete         controllers.PropositionController.deleteProposalAction

GET     /proposition/all         	controllers.PropositionController.getAllProposalsAction


# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)



