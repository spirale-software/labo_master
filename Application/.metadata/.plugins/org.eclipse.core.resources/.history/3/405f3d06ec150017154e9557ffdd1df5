# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Routes related to index and registration routes
#--------------------------------------------------------------------------------------------------
GET     /                 			controllers.HomeController.indexAction

GET     /logout           			controllers.HomeController.logOutAction

POST	/connection/newUser			controllers.HomeController.connectNewUserAction

POST	/connection/registeredUser	controllers.HomeController.connectRegisteredUserAction

# Routes related to propositions
# -------------------------------------------------------------------------------------------------
GET     /proposition/form          		controllers.ProposalController.proposalAction

POST    /proposition/add            	controllers.ProposalController.addProposalAction

GET     /proposition/detail         	controllers.ProposalController.detailProposalAction

GET     /proposition/edit/:idProposal	controllers.ProposalController.editProposalAction

GET     /proposition/delete         	controllers.ProposalController.deleteProposalAction

GET     /proposition/all         		controllers.ProposalController.getAllProposalsAction


# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)



